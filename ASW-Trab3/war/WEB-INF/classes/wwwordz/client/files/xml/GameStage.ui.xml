<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.page{
		font-size: large;
		margin: auto;
		height:90%;
	}
	.scrollHorizontal{
        overflow:scroll;
    }
    .scrollVertical{
        overflow-y: scroll;
    }
	</ui:style>
	<g:HTMLPanel styleName="{style.page}">
		<div aling="centre">
			<div style="font-size: x-large;">
				<g:VerticalPanel ui:field="panel"></g:VerticalPanel>
			</div>
			<div>
				Sequence:
				<g:HorizontalPanel ui:field="sequence" styleName="{style.scrollHorizontal}"/>
			</div>
			<br></br>
			<div style="height:10%; margin: 5% 0 5% 0">
					Words:
					<g:VerticalPanel ui:field="words" styleName="{style.scrollVertical}"/>
			</div>
			<div>
				Messages:
				<g:VerticalPanel ui:field="messages" styleName="{style.scrollVertical}"/>
			</div>
			
			<div>
				<p>
					Select a cell to start/add word.
					<br></br>
				</p>
				<p>
					Double click to submit word
					<br></br>
					<small>Once a word is submitted that sequence is no longer available.</small>
				</p>
			</div>
			
