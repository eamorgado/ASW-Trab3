<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.join-style{
		font-size: large;
	}
	.leave-button{
		color: white;
		margin-top: 2%;
		margin-right: 2%;
		background-color: grey;
		padding: 1% 2%;
		border-radius: 10px;
		transition-duration: 0.4s;
		border: 2px solid black;
	}
	.leave-button:hover{
		background-color: red;
  		color: white;
	}
	.join-button{
		color: white;
		margin-top: 5%;
		background-color: grey;
		padding: 2% 5%;
		border-radius: 10px;
		transition-duration: 0.4s;
		border: 2px solid black;
	}
	.join-button:hover{
		background-color: white;
  		color: black;
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.join-style}">
		<h2>Join</h2>
		<div align="center">
			<p>
				<g:Button ui:field="join_leave" styleName="{style.leave-button}">Leave</g:Button>
			</p>
			<p>
				<g:Button ui:field="join_game" styleName="{style.join-button}">Join game</g:Button>
			</p>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 